'use client';

import { useEffect, useState } from 'react';
import axios from 'axios';
import { PieChart, Pie, Cell, BarChart, Bar, XAxis, YAxis, CartesianGrid, Tooltip, Legend, LineChart, Line, ResponsiveContainer } from 'recharts';

interface Stats {
  total_processes: number;
  total_value: number;
  by_tribunal: { [key: string]: number };
  by_relevance: { [key: string]: number };
  by_classe: { [key: string]: number };
  value_by_tribunal: { [key: string]: number };
  timeline: { date: string; count: number }[];
  high_relevance_count: number;
}

const COLORS = {
  primary: '#6366f1',
  secondary: '#8b5cf6',
  success: '#10b981',
  warning: '#f59e0b',
  danger: '#ef4444',
  info: '#3b82f6',
};

export default function AnalyticsDashboard() {
  const [stats, setStats] = useState<Stats | null>(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    fetchStats();
  }, []);

  const fetchStats = async () => {
    try {
      const response = await axios.get<Stats>('http://localhost:8000/stats');
      setStats(response.data);
      setError(null);
    } catch (err) {
      setError('Erro ao carregar estat√≠sticas');
      console.error('Erro:', err);
    } finally {
      setLoading(false);
    }
  };

  const formatCurrency = (value: number) => {
    return new Intl.NumberFormat('pt-BR', {
      style: 'currency',
      currency: 'BRL',
    }).format(value);
  };

  if (loading) {
    return (
      <section className="analytics-section">
        <div className="section-header">
          <h2 className="section-title">üìä Analytics Dashboard</h2>
        </div>
        <div className="loading-state">
          <div className="spinner"></div>
          <p>Carregando estat√≠sticas...</p>
        </div>
      </section>
    );
  }

  if (error || !stats) {
    return (
      <section className="analytics-section">
        <div className="section-header">
          <h2 className="section-title">üìä Analytics Dashboard</h2>
        </div>
        <div className="error-state">
          <p>‚ùå {error}</p>
          <button onClick={fetchStats} className="retry-button">
            üîÑ Tentar Novamente
          </button>
        </div>
      </section>
    );
  }

  const tribunalData = Object.entries(stats.by_tribunal).map(([name, value]) => ({
    name,
    value,
  }));

  const relevanceData = Object.entries(stats.by_relevance).map(([name, value]) => ({
    name,
    value,
  }));

  const classeData = Object.entries(stats.by_classe).map(([name, value]) => ({
    name: name === '8015' ? 'Div√≥rcio' : 'Invent√°rio',
    value,
  }));

  const valueByTribunalData = Object.entries(stats.value_by_tribunal).map(([name, value]) => ({
    name,
    value,
  }));

  const timelineData = stats.timeline.map((item) => ({
    date: new Date(item.date).toLocaleDateString('pt-BR', { month: 'short' }),
    count: item.count,
  }));

  const CustomTooltip = ({ active, payload, label }: any) => {
    if (active && payload && payload.length) {
      return (
        <div className="custom-tooltip">
          {label && <p className="recharts-tooltip-label">{label}</p>}
          {payload.map((entry: any, index: number) => (
            <p key={index} className="recharts-tooltip-item">
              <span style={{ color: entry.color }}>{entry.name}:</span>
              <span className="recharts-tooltip-item-value">
                {entry.name.includes('Valor') || entry.dataKey === 'value' 
                  ? formatCurrency(entry.value)
                  : entry.value}
              </span>
            </p>
          ))}
        </div>
      );
    }
    return null;
  };

  return (
    <section className="analytics-section">
      <div className="section-header">
        <h2 className="section-title">üìä Analytics Dashboard</h2>
      </div>

      <div className="kpi-grid">
        <div className="kpi-card">
          <div className="kpi-icon">üìà</div>
          <div className="kpi-content">
            <div className="kpi-label">
              Total de Processos
              <span className="chart-info-icon">
                ‚ÑπÔ∏è
                <span className="info-tooltip">N√∫mero total de processos no sistema</span>
              </span>
            </div>
            <div className="kpi-value">{stats.total_processes}</div>
          </div>
        </div>

        <div className="kpi-card">
          <div className="kpi-icon">üí∞</div>
          <div className="kpi-content">
            <div className="kpi-label">
              Valor Total em Causa
              <span className="chart-info-icon">
                ‚ÑπÔ∏è
                <span className="info-tooltip">Soma de todos os valores em causa</span>
              </span>
            </div>
            <div className="kpi-value">{formatCurrency(stats.total_value)}</div>
          </div>
        </div>

        <div className="kpi-card">
          <div className="kpi-icon">üî•</div>
          <div className="kpi-content">
            <div className="kpi-label">
              Alta Relev√¢ncia
              <span className="chart-info-icon">
                ‚ÑπÔ∏è
                <span className="info-tooltip">Processos com relev√¢ncia alta ou urgente</span>
              </span>
            </div>
            <div className="kpi-value">{stats.high_relevance_count}</div>
          </div>
        </div>
      </div>

      <div className="charts-grid">
        <div className="chart-card">
          <h3 className="chart-title">
            üèõÔ∏è Processos por Tribunal
            <span className="chart-info-icon">
              ‚ÑπÔ∏è
              <span className="info-tooltip">Distribui√ß√£o por tribunal</span>
            </span>
          </h3>
          <ResponsiveContainer width="100%" height={300}>
            <PieChart>
              <Pie
                data={tribunalData}
                cx="50%"
                cy="50%"
                labelLine={false}
                label={({ name, percent }) => `${name}: ${(percent * 100).toFixed(0)}%`}
                outerRadius={100}
                fill="#8884d8"
                dataKey="value"
              >
                {tribunalData.map((entry, index) => (
                  <Cell key={`cell-${index}`} fill={index === 0 ? COLORS.primary : COLORS.secondary} />
                ))}
              </Pie>
              <Tooltip content={<CustomTooltip />} />
            </PieChart>
          </ResponsiveContainer>
        </div>

        <div className="chart-card">
          <h3 className="chart-title">
            üî• Processos por Relev√¢ncia
            <span className="chart-info-icon">
              ‚ÑπÔ∏è
              <span className="info-tooltip">Classifica√ß√£o por urg√™ncia</span>
            </span>
          </h3>
          <ResponsiveContainer width="100%" height={300}>
            <BarChart data={relevanceData}>
              <CartesianGrid strokeDasharray="3 3" stroke="#e2e8f0" />
              <XAxis dataKey="name" stroke="#64748b" />
              <YAxis stroke="#64748b" />
              <Tooltip content={<CustomTooltip />} />
              <Bar dataKey="value" fill={COLORS.info} radius={[8, 8, 0, 0]} />
            </BarChart>
          </ResponsiveContainer>
        </div>

        <div className="chart-card">
          <h3 className="chart-title">
            üìã Processos por Tipo
            <span className="chart-info-icon">
              ‚ÑπÔ∏è
              <span className="info-tooltip">Div√≥rcio vs Invent√°rio</span>
            </span>
          </h3>
          <ResponsiveContainer width="100%" height={300}>
            <PieChart>
              <Pie
                data={classeData}
                cx="50%"
                cy="50%"
                labelLine={false}
                label={({ name, percent }) => `${name}: ${(percent * 100).toFixed(0)}%`}
                outerRadius={100}
                fill="#8884d8"
                dataKey="value"
              >
                {classeData.map((entry, index) => (
                  <Cell key={`cell-${index}`} fill={index === 0 ? COLORS.danger : COLORS.warning} />
                ))}
              </Pie>
              <Tooltip content={<CustomTooltip />} />
            </PieChart>
          </ResponsiveContainer>
        </div>

        <div className="chart-card">
          <h3 className="chart-title">
            üíµ Valor em Causa por Tribunal
            <span className="chart-info-icon">
              ‚ÑπÔ∏è
              <span className="info-tooltip">Soma dos valores por tribunal</span>
            </span>
          </h3>
          <ResponsiveContainer width="100%" height={300}>
            <BarChart data={valueByTribunalData}>
              <CartesianGrid strokeDasharray="3 3" stroke="#e2e8f0" />
              <XAxis dataKey="name" stroke="#64748b" />
              <YAxis stroke="#64748b" />
              <Tooltip content={<CustomTooltip />} />
              <Bar dataKey="value" fill={COLORS.success} radius={[8, 8, 0, 0]} />
            </BarChart>
          </ResponsiveContainer>
        </div>

        <div className="chart-card chart-card-wide">
          <h3 className="chart-title">
            üìÖ Timeline de Processos
            <span className="chart-info-icon">
              ‚ÑπÔ∏è
              <span className="info-tooltip">Evolu√ß√£o mensal</span>
            </span>
          </h3>
          <ResponsiveContainer width="100%" height={300}>
            <LineChart data={timelineData}>
              <CartesianGrid strokeDasharray="3 3" stroke="#e2e8f0" />
              <XAxis dataKey="date" stroke="#64748b" />
              <YAxis stroke="#64748b" />
              <Tooltip content={<CustomTooltip />} />
              <Legend />
              <Line 
                type="monotone" 
                dataKey="count" 
                stroke={COLORS.primary} 
                strokeWidth={3}
                dot={{ fill: COLORS.primary, r: 6 }}
                activeDot={{ r: 8 }}
                name="Processos"
              />
            </LineChart>
          </ResponsiveContainer>
        </div>
      </div>
    </section>
  );
}
