'use client';
import { useState, useEffect } from 'react';
import axios from 'axios';

const api = axios.create({
  baseURL: 'http://localhost:8000',
});

interface Process {
  id: number;
  numero_cnj: string;
  tribunal: string;
  classe_tpu: string;
  assunto_tpu: string[];
  comarca: string;
  relevance: string;
  valor_causa: number | null;
  updated_at: string;
  vara: string;
  orgao: string;
}

export default function Dashboard() {
  const [processes, setProcesses] = useState<Process[]>([]);
  const [loading, setLoading] = useState(true);
  const [filters, setFilters] = useState({
    tribunal: '',
    classe: '',
    relevance: '',
    search: ''
  });

  useEffect(() => {
    loadProcesses();
  }, [filters]);

  async function loadProcesses() {
    try {
      setLoading(true);
      const params: any = {};
      if (filters.tribunal) params.tribunal = filters.tribunal;
      if (filters.classe) params.classe = filters.classe;
      if (filters.relevance) params.relevance = filters.relevance;
      if (filters.search) params.numero_cnj = filters.search;
      
      const response = await api.get<{ items: Process[] }>('/processes', { params });
      setProcesses(response.data.items);
    } catch (error) {
      console.error('Erro:', error);
    } finally {
      setLoading(false);
    }
  }

  const urgentProcesses = processes.filter(p => p.relevance === 'Alta');
  const todayProcesses = processes.filter(p => {
    const today = new Date().toDateString();
    return new Date(p.updated_at).toDateString() === today;
  });

  const getRelevanceBadge = (relevance: string) => {
    const styles = {
      'Alta': 'bg-red-500 text-white',
      'M√©dia': 'bg-yellow-500 text-white',
      'Baixa': 'bg-green-500 text-white'
    };
    return styles[relevance as keyof typeof styles] || 'bg-gray-500 text-white';
  };

  const getClasseName = (classe: string) => {
    return classe === '8015' ? 'Div√≥rcio' : 'Invent√°rio';
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
      {/* Header */}
      <div className="bg-white shadow-lg">
        <div className="container mx-auto px-6 py-6">
          <div className="flex items-center justify-between">
            <div>
              <h1 className="text-4xl font-bold text-gray-900">‚öñÔ∏è Monitor de Processos</h1>
              <p className="text-gray-600 mt-1">TJSP e TJBA - Invent√°rio e Div√≥rcio</p>
            </div>
            <div className="text-right">
              <div className="text-sm text-gray-500">√öltima atualiza√ß√£o</div>
              <div className="text-lg font-semibold text-gray-900">{new Date().toLocaleTimeString('pt-BR')}</div>
            </div>
          </div>
        </div>
      </div>

      <div className="container mx-auto px-6 py-8">
        {/* KPIs */}
        <div className="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div className="bg-white rounded-xl shadow-lg p-6 border-l-4 border-blue-500">
            <div className="text-sm text-gray-600 font-medium">Total de Processos</div>
            <div className="text-3xl font-bold text-gray-900 mt-2">{processes.length}</div>
          </div>
          <div className="bg-white rounded-xl shadow-lg p-6 border-l-4 border-red-500">
            <div className="text-sm text-gray-600 font-medium">üî• Urgentes</div>
            <div className="text-3xl font-bold text-red-600 mt-2">{urgentProcesses.length}</div>
          </div>
          <div className="bg-white rounded-xl shadow-lg p-6 border-l-4 border-green-500">
            <div className="text-sm text-gray-600 font-medium">üìÖ Hoje</div>
            <div className="text-3xl font-bold text-green-600 mt-2">{todayProcesses.length}</div>
          </div>
          <div className="bg-white rounded-xl shadow-lg p-6 border-l-4 border-purple-500">
            <div className="text-sm text-gray-600 font-medium">Status</div>
            <div className="text-xl font-bold text-green-600 mt-2">‚úì Online</div>
          </div>
        </div>

        {/* Filtros */}
        <div className="bg-white rounded-xl shadow-lg p-6 mb-8">
          <h2 className="text-xl font-bold text-gray-900 mb-4">üîç Filtros</h2>
          <div className="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">Buscar por CNJ</label>
              <input
                type="text"
                placeholder="0001234-56.2024..."
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                value={filters.search}
                onChange={(e) => setFilters({ ...filters, search: e.target.value })}
              />
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">Tribunal</label>
              <select
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                value={filters.tribunal}
                onChange={(e) => setFilters({ ...filters, tribunal: e.target.value })}
              >
                <option value="">Todos</option>
                <option value="TJSP">TJSP</option>
                <option value="TJBA">TJBA</option>
              </select>
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">Tipo</label>
              <select
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                value={filters.classe}
                onChange={(e) => setFilters({ ...filters, classe: e.target.value })}
              >
                <option value="">Todos</option>
                <option value="8015">Div√≥rcio</option>
                <option value="8016">Invent√°rio</option>
              </select>
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">Relev√¢ncia</label>
              <select
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                value={filters.relevance}
                onChange={(e) => setFilters({ ...filters, relevance: e.target.value })}
              >
                <option value="">Todas</option>
                <option value="Alta">üî• Alta</option>
                <option value="M√©dia">‚ö†Ô∏è M√©dia</option>
                <option value="Baixa">‚úì Baixa</option>
              </select>
            </div>
          </div>
        </div>

        {/* Processos Urgentes */}
        {urgentProcesses.length > 0 && (
          <div className="mb-8">
            <h2 className="text-2xl font-bold text-red-600 mb-4">üî• Processos Urgentes</h2>
            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
              {urgentProcesses.slice(0, 4).map((process) => (
                <div key={process.id} className="bg-red-50 border-2 border-red-200 rounded-xl shadow-lg p-6 hover:shadow-2xl transition-shadow">
                  <div className="flex justify-between items-start mb-3">
                    <div className="flex-1">
                      <div className="text-sm text-red-600 font-semibold">{process.tribunal} ‚Ä¢ {getClasseName(process.classe_tpu)}</div>
                      <div className="text-lg font-bold text-gray-900 mt-1">{process.numero_cnj}</div>
                    </div>
                    <span className="px-3 py-1 bg-red-500 text-white text-xs font-bold rounded-full">URGENTE</span>
                  </div>
                  <div className="space-y-2 text-sm">
                    <div className="flex justify-between">
                      <span className="text-gray-600">Comarca:</span>
                      <span className="font-semibold text-gray-900">{process.comarca}</span>
                    </div>
                    <div className="flex justify-between">
                      <span className="text-gray-600">Vara:</span>
                      <span className="font-semibold text-gray-900">{process.vara}</span>
                    </div>
                    {process.valor_causa && (
                      <div className="flex justify-between">
                        <span className="text-gray-600">Valor:</span>
                        <span className="font-semibold text-gray-900">R$ {process.valor_causa.toLocaleString('pt-BR')}</span>
                      </div>
                    )}
                  </div>
                  <button className="mt-4 w-full bg-red-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-red-700 transition-colors">
                    Ver Detalhes ‚Üí
                  </button>
                </div>
              ))}
            </div>
          </div>
        )}

        {/* Todos os Processos */}
        <div>
          <h2 className="text-2xl font-bold text-gray-900 mb-4">üìã Todos os Processos</h2>
          {loading ? (
            <div className="bg-white rounded-xl shadow-lg p-12 text-center">
              <div className="inline-block animate-spin rounded-full h-12 w-12 border-b-4 border-blue-600"></div>
              <p className="mt-4 text-gray-600">Carregando processos...</p>
            </div>
          ) : processes.length === 0 ? (
            <div className="bg-white rounded-xl shadow-lg p-12 text-center">
              <div className="text-6xl mb-4">üì≠</div>
              <p className="text-xl text-gray-600">Nenhum processo encontrado</p>
            </div>
          ) : (
            <div className="grid grid-cols-1 gap-4">
              {processes.map((process) => (
                <div key={process.id} className="bg-white rounded-lg shadow hover:shadow-xl transition-shadow p-6">
                  <div className="flex items-center justify-between">
                    <div className="flex-1">
                      <div className="flex items-center gap-3 mb-2">
                        <span className={`px-3 py-1 rounded-full text-xs font-bold ${getRelevanceBadge(process.relevance)}`}>
                          {process.relevance}
                        </span>
                        <span className="text-sm font-semibold text-gray-600">{process.tribunal}</span>
                        <span className="text-sm text-gray-500">‚Ä¢</span>
                        <span className="text-sm font-semibold text-blue-600">{getClasseName(process.classe_tpu)}</span>
                      </div>
                      <div className="text-lg font-bold text-gray-900">{process.numero_cnj}</div>
                      <div className="text-sm text-gray-600 mt-1">{process.comarca} ‚Ä¢ {process.vara}</div>
                    </div>
                    <div className="text-right">
                      {process.valor_causa && (
                        <div className="text-lg font-bold text-green-600">
                          R$ {process.valor_causa.toLocaleString('pt-BR')}
                        </div>
                      )}
                      <button className="mt-2 px-6 py-2 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                        Ver Detalhes
                      </button>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  );
}
