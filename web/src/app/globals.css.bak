/* ===========================
   PREMIUM DESIGN SYSTEM
   =========================== */

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  --primary: #6366f1;
  --primary-dark: #4f46e5;
  --primary-light: #818cf8;
  --secondary: #8b5cf6;
  --success: #10b981;
  --warning: #f59e0b;
  --danger: #ef4444;
  --dark: #1e293b;
  --gray: #64748b;
  --light-gray: #f1f5f9;
  --white: #ffffff;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  background-attachment: fixed;
  min-height: 100vh;
  color: var(--dark);
  line-height: 1.6;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideDown {
  from { opacity: 0; transform: translateY(-30px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes scaleIn {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.05); }
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 2rem;
  animation: fadeIn 0.6s ease-out;
}

.header {
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.98) 100%);
  backdrop-filter: blur(10px);
  padding: 2.5rem;
  border-radius: 20px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  margin-bottom: 2rem;
  position: relative;
  overflow: hidden;
  animation: slideDown 0.5s ease-out;
}

.header h1 {
  font-size: 2.5rem;
  font-weight: 800;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 0.5rem;
  letter-spacing: -0.02em;
}

.header p {
  color: var(--gray);
  font-size: 1.1rem;
  font-weight: 500;
}

.kpis {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.kpi-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.98) 100%);
  backdrop-filter: blur(10px);
  padding: 2rem;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: scaleIn 0.5s ease-out backwards;
  cursor: pointer;
}

.kpi-card:nth-child(1) { animation-delay: 0.1s; }
.kpi-card:nth-child(2) { animation-delay: 0.2s; }
.kpi-card:nth-child(3) { animation-delay: 0.3s; }

.kpi-card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
}

.kpi-card.urgent {
  border: 2px solid var(--danger);
  background: linear-gradient(135deg, rgba(254, 226, 226, 0.9) 0%, rgba(255, 255, 255, 0.95) 100%);
}

.kpi-card h3 {
  font-size: 0.95rem;
  font-weight: 700;
  color: var(--gray);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 1rem;
}

.kpi-value {
  font-size: 3rem;
  font-weight: 800;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1;
  position: relative;
  z-index: 1;
}

.status-online {
  color: var(--success) !important;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 2rem !important;
}

.status-online::before {
  content: '';
  width: 16px;
  height: 16px;
  background: var(--success);
  border-radius: 50%;
  animation: pulse 2s infinite;
  box-shadow: 0 0 20px rgba(16, 185, 129, 0.6);
}

.filters {
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.98) 100%);
  backdrop-filter: blur(10px);
  padding: 2rem;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  display: grid;
  grid-template-columns: 2fr repeat(3, 1fr);
  gap: 1rem;
  margin-bottom: 2rem;
}

.filter-input, .filter-select {
  padding: 1rem 1.5rem;
  border: 2px solid rgba(99, 102, 241, 0.2);
  border-radius: 12px;
  font-size: 1rem;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: var(--white);
}

.filter-input:focus, .filter-select:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
  transform: translateY(-2px);
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 4rem;
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.98) 100%);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.spinner {
  width: 60px;
  height: 60px;
  border: 4px solid rgba(99, 102, 241, 0.1);
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-container p {
  margin-top: 1.5rem;
  color: var(--gray);
  font-size: 1.1rem;
  font-weight: 600;
}

.error-message {
  background: linear-gradient(135deg, rgba(254, 226, 226, 0.95) 0%, rgba(255, 255, 255, 0.98) 100%);
  backdrop-filter: blur(10px);
  border: 2px solid var(--danger);
  padding: 2rem;
  border-radius: 20px;
  text-align: center;
  box-shadow: 0 10px 30px rgba(239, 68, 68, 0.2);
}

.error-message p {
  color: var(--danger);
  font-size: 1.1rem;
  font-weight: 600;
}

.urgent-section {
  margin-bottom: 2rem;
}

.urgent-section h2 {
  color: var(--white);
  font-size: 1.8rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
  text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
}

.urgent-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
  gap: 1.5rem;
}

.urgent-card {
  background: linear-gradient(135deg, rgba(254, 226, 226, 0.98) 0%, rgba(255, 255, 255, 0.95) 100%);
  backdrop-filter: blur(10px);
  border: 3px solid var(--danger);
  border-radius: 20px;
  padding: 2rem;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 10px 30px rgba(239, 68, 68, 0.2);
}

.urgent-card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 20px 50px rgba(239, 68, 68, 0.3);
}

.urgent-badge {
  position: absolute;
  top: 1.5rem;
  right: 1.5rem;
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: var(--white);
  padding: 0.5rem 1.25rem;
  border-radius: 25px;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  box-shadow: 0 4px 15px rgba(239, 68, 68, 0.4);
  z-index: 2;
}

.urgent-card h3 {
  font-size: 1.3rem;
  font-weight: 700;
  color: var(--dark);
  margin-bottom: 1.5rem;
  position: relative;
  z-index: 1;
}

.process-info {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  margin-bottom: 1.5rem;
  position: relative;
  z-index: 1;
}

.process-info p {
  display: flex;
  justify-content: space-between;
  font-size: 0.95rem;
  color: var(--gray);
}

.process-info strong {
  color: var(--dark);
  font-weight: 600;
}

.all-processes h2 {
  color: var(--white);
  font-size: 1.8rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
  text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
}

.process-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.process-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.98) 100%);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  padding: 2rem;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2px solid transparent;
}

.process-card:hover {
  transform: translateX(8px) scale(1.01);
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
  border-color: rgba(99, 102, 241, 0.3);
}

.process-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.25rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid rgba(99, 102, 241, 0.1);
}

.process-header h3 {
  font-size: 1.2rem;
  font-weight: 700;
  color: var(--dark);
}

.badge {
  padding: 0.6rem 1.25rem;
  border-radius: 25px;
  font-size: 0.85rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
}

.badge-alta {
  background: linear-gradient(135deg, #fee2e2, #fca5a5);
  color: #991b1b;
}

.badge-média {
  background: linear-gradient(135deg, #fef3c7, #fde047);
  color: #92400e;
}

.badge-baixa {
  background: linear-gradient(135deg, #dcfce7, #86efac);
  color: #14532d;
}

.process-details {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.detail-row {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.label {
  font-size: 0.85rem;
  font-weight: 600;
  color: var(--gray);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.detail-row span:last-child {
  font-size: 1rem;
  font-weight: 600;
  color: var(--dark);
}

.btn-details, .btn-details-secondary {
  padding: 0.9rem 2.25rem;
  border: none;
  border-radius: 12px;
  font-size: 0.95rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.btn-details {
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: var(--white);
  box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
}

.btn-details:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 35px rgba(99, 102, 241, 0.6);
}

.btn-details-secondary {
  background: var(--white);
  color: var(--primary);
  border: 2px solid var(--primary);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.btn-details-secondary:hover {
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: var(--white);
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
}

.detail-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
  animation: fadeIn 0.6s ease-out;
}

.detail-header {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.btn-back {
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: white;
  border: none;
  padding: 1rem 2rem;
  border-radius: 12px;
  cursor: pointer;
  font-size: 1rem;
  font-weight: 700;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
}

.btn-back:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 35px rgba(99, 102, 241, 0.6);
}

.detail-header h1 {
  color: var(--white);
  font-size: 2rem;
  font-weight: 700;
  text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
}

.detail-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.98) 100%);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  padding: 2.5rem;
  margin-bottom: 1.5rem;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  border: 2px solid transparent;
  transition: all 0.3s;
}

.detail-card:hover {
  border-color: rgba(99, 102, 241, 0.2);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
}

.detail-card.main-info {
  border: 3px solid var(--primary);
  background: linear-gradient(135deg, rgba(240, 244, 255, 0.9) 0%, rgba(255, 255, 255, 0.95) 100%);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  padding-bottom: 1.5rem;
  border-bottom: 3px solid rgba(99, 102, 241, 0.2);
}

.card-header h2 {
  margin: 0;
  color: var(--dark);
  font-size: 1.8rem;
  font-weight: 700;
}

.badge-large {
  padding: 1rem 2rem;
  border-radius: 15px;
  font-weight: 700;
  font-size: 1.1rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

.badge-large.badge-alta {
  background: linear-gradient(135deg, #fee2e2, #fca5a5);
  color: #991b1b;
}

.badge-large.badge-média {
  background: linear-gradient(135deg, #fef3c7, #fde047);
  color: #92400e;
}

.badge-large.badge-baixa {
  background: linear-gradient(135deg, #dcfce7, #86efac);
  color: #14532d;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  padding: 1.25rem;
  background: rgba(99, 102, 241, 0.05);
  border-radius: 12px;
  border-left: 4px solid var(--primary);
  transition: all 0.3s;
}

.info-item:hover {
  background: rgba(99, 102, 241, 0.1);
  transform: translateX(4px);
}

.info-label {
  font-size: 0.85rem;
  font-weight: 700;
  color: var(--gray);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.info-value {
  font-size: 1.2rem;
  color: var(--dark);
  font-weight: 700;
}

.parties-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 1rem;
}

.party-item {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  padding: 1.5rem;
  background: rgba(99, 102, 241, 0.05);
  border-radius: 15px;
  border-left: 5px solid var(--primary);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.party-item:hover {
  transform: translateX(8px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  background: rgba(99, 102, 241, 0.08);
}

.party-type {
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: 10px;
  font-size: 0.9rem;
  font-weight: 700;
  min-width: 150px;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
}

.party-name {
  font-size: 1.1rem;
  color: var(--dark);
  font-weight: 600;
}

.movements-timeline {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 1rem;
  position: relative;
  padding-left: 2.5rem;
}

.movements-timeline::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4px;
  background: linear-gradient(180deg, var(--primary), var(--secondary));
  border-radius: 2px;
}

.movement-item {
  position: relative;
  padding: 1.5rem;
  background: rgba(99, 102, 241, 0.05);
  border-radius: 15px;
  border: 2px solid transparent;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.movement-item::before {
  content: '';
  position: absolute;
  left: -3rem;
  top: 1.75rem;
  width: 16px;
  height: 16px;
  background: var(--primary);
  border-radius: 50%;
  border: 4px solid white;
  box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.2);
}

.movement-item:hover {
  background: white;
  border-color: var(--primary);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  transform: translateX(8px);
}

.movement-date {
  font-size: 0.9rem;
  font-weight: 700;
  color: var(--primary);
  margin-bottom: 0.5rem;
}

.movement-description {
  font-size: 1rem;
  color: var(--gray);
  line-height: 1.6;
  font-weight: 500;
}

.detail-actions {
  display: flex;
  gap: 1rem;
  margin-top: 2rem;
  flex-wrap: wrap;
}

.btn-action {
  flex: 1;
  min-width: 200px;
  padding: 1.25rem 2rem;
  border: none;
  border-radius: 15px;
  font-size: 1rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: white;
  box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
}

.btn-primary:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 35px rgba(99, 102, 241, 0.6);
}

.btn-secondary {
  background: white;
  color: var(--primary);
  border: 3px solid var(--primary);
}

.btn-secondary:hover {
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: white;
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
}

@media (max-width: 768px) {
  .container { padding: 1rem; }
  .header h1 { font-size: 2rem; }
  .kpis { grid-template-columns: 1fr; }
  .filters { grid-template-columns: 1fr; }
  .urgent-grid { grid-template-columns: 1fr; }
  .process-details { grid-template-columns: 1fr; }
  .info-grid { grid-template-columns: 1fr; }
  .detail-actions { flex-direction: column; }
  .btn-action { width: 100%; }
}

/* ===========================
   PAGINAÇÃO
   =========================== */

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
}

.page-info {
  color: rgba(255, 255, 255, 0.9);
  font-size: 1rem;
  font-weight: 600;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 0.75rem;
  margin-top: 3rem;
  padding: 2rem;
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.98) 100%);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  animation: fadeIn 0.5s ease-out;
}

.pagination-btn {
  padding: 1rem 2rem;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: white;
  border: none;
  border-radius: 12px;
  font-size: 1rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
}

.pagination-btn:hover:not(:disabled) {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(99, 102, 241, 0.5);
}

.pagination-btn:disabled {
  opacity: 0.3;
  cursor: not-allowed;
  background: var(--gray);
  transform: none;
  box-shadow: none;
}

.pagination-numbers {
  display: flex;
  gap: 0.5rem;
  align-items: center;
}

.pagination-number {
  min-width: 50px;
  height: 50px;
  padding: 0.75rem 1rem;
  background: white;
  color: var(--primary);
  border: 2px solid rgba(99, 102, 241, 0.2);
  border-radius: 12px;
  font-size: 1rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.pagination-number:hover {
  background: rgba(99, 102, 241, 0.1);
  border-color: var(--primary);
  transform: translateY(-2px);
}

.pagination-number.active {
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: white;
  border-color: transparent;
  box-shadow: 0 4px 15px rgba(99, 102, 241, 0.4);
  transform: scale(1.1);
}

.pagination-ellipsis {
  color: var(--gray);
  font-weight: 700;
  padding: 0 0.5rem;
}

@media (max-width: 768px) {
  .pagination {
    flex-direction: column;
    gap: 1rem;
  }

  .pagination-numbers {
    order: 2;
    flex-wrap: wrap;
    justify-content: center;
  }

  .pagination-btn {
    width: 100%;
  }

  .section-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
}

/* ===========================
   ANALYTICS DASHBOARD
   =========================== */

.analytics-container {
  margin-bottom: 2rem;
  animation: fadeIn 0.6s ease-out;
}

.analytics-loading,
.analytics-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 4rem;
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.98) 100%);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.analytics-metrics {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.metric-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.98) 100%);
  backdrop-filter: blur(10px);
  padding: 2rem;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  gap: 1.5rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2px solid transparent;
}

.metric-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
  border-color: rgba(99, 102, 241, 0.3);
}

.metric-icon {
  font-size: 3rem;
  filter: drop-shadow(0 4px 10px rgba(99, 102, 241, 0.3));
}

.metric-content h3 {
  font-size: 0.9rem;
  font-weight: 700;
  color: var(--gray);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 0.5rem;
}

.metric-value {
  font-size: 2rem;
  font-weight: 800;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.charts-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
  gap: 1.5rem;
}

.chart-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.98) 100%);
  backdrop-filter: blur(10px);
  padding: 2rem;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2px solid transparent;
}

.chart-card:hover {
  border-color: rgba(99, 102, 241, 0.3);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
}

.chart-card-wide {
  grid-column: 1 / -1;
}

.chart-title {
  font-size: 1.2rem;
  font-weight: 700;
  color: var(--dark);
  margin-bottom: 1.5rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid rgba(99, 102, 241, 0.1);
}

@media (max-width: 1200px) {
  .charts-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .analytics-metrics {
    grid-template-columns: 1fr;
  }

  .metric-card {
    flex-direction: column;
    text-align: center;
  }

  .chart-card {
    padding: 1.5rem;
  }
}

/* ===========================
   TOOLTIPS INFORMATIVOS
   =========================== */

.info-tooltip {
  display: inline-block;
  margin-left: 8px;
  font-size: 0.85rem;
  cursor: help;
  opacity: 0.6;
  transition: opacity 0.3s ease;
  vertical-align: middle;
}

.info-tooltip:hover {
  opacity: 1;
}

.chart-title .info-tooltip {
  font-size: 1rem;
  margin-left: 10px;
}

.metric-content h3 {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}
